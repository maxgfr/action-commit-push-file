{
  "name": "@maxgfr/github-commit-push-file",
  "private": true,
  "description": "Github action which lets you to commit and push a file to a repository",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run package && npm run lint && npm test",
    "prepare": "husky install",
    "lint-staged": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/maxgfr/github-commit-push-file.git"
  },
  "keywords": [
    "github",
    "actions",
    "commit",
    "push",
    "file"
  ],
  "author": "maxgfr",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.9.0",
    "@actions/exec": "1.1.1"
  },
  "devDependencies": {
    "@types/node": "17.0.21",
    "@typescript-eslint/parser": "5.28.0",
    "@vercel/ncc": "0.34.0",
    "eslint": "8.18.0",
    "eslint-plugin-github": "4.3.6",
    "eslint-plugin-jest": "26.5.3",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "js-yaml": "4.1.0",
    "lint-staged": "12.5.0",
    "prettier": "2.7.1",
    "ts-jest": "27.1.5",
    "typescript": "4.7.4"
  },
  "lint-staged": {
    "*.ts": "npm run format --fix"
  }
}
